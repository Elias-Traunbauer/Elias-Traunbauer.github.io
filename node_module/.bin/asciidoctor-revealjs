#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@asciidoctor/reveal.js/npm/asciidoctor-revealjs" "$@"
else 
  exec node  "$basedir/../@asciidoctor/reveal.js/npm/asciidoctor-revealjs" "$@"
fi
